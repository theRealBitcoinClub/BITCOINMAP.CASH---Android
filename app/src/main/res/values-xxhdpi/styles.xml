<resources>


        <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
            <item name="android:windowMinWidthMajor">95%</item>
            <item name="android:windowMinWidthMinor">95%</item>
        </style>

        <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
            <item name="windowNoTitle">true</item>
            <item name="windowActionBar">false</item>
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
        </style>

    <style name="ImageStyle">
        <item name="android:layout_width">360dp</item>
        <item name="android:layout_height">270dp</item>
    </style>

    <style name="TagStyle" parent="TagStyleParent">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
</resources>
