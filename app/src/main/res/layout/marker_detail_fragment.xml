<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:id="@+id/dialog_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:maxLines="1"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/horizontal_rule"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimary"/>

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/img"
        android:layout_width="280dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:background="@color/colorAccent"
        android:layout_height="210dp" />

    <ImageView
        android:id="@+id/horizontal_rule2"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/dialog_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:padding="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimaryDark" />
        <TextView
            android:id="@+id/dialog_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorPrimaryDark" />
    <TextView
        android:id="@+id/dialog_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorDiscount" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/dialog_button_route"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_action_move" />
            <ImageView
                android:id="@+id/dialog_button_share"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_action_share"/>
            <ImageView
                android:id="@+id/dialog_button_favo"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_action_favorite_white"/>
        </android.support.v7.widget.LinearLayoutCompat>

</LinearLayout>