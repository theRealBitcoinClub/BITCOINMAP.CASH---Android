<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginHorizontal="32dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:padding="8dp"
        android:text="The Real Bitcoin Club"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimary" />

    <ImageView
        android:id="@+id/horizontal_rule"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/dialog_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:padding="8dp"
        android:text="ATM/Teller"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimaryDark" />
    <TextView
        android:id="@+id/dialog_reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Reviews: 4.7 (84)"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorPrimaryDark" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/dialog_button_route"
        android:layout_width="0dp"
        android:layout_height="32dip"
        android:padding="8dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_action_move" />
        <ImageView
            android:id="@+id/dialog_button_share"
            android:layout_width="0dp"
            android:layout_height="32dip"
            android:padding="8dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_action_share"/>
        <ImageView
            android:id="@+id/dialog_button_favo"
            android:layout_width="0dp"
            android:layout_height="32dip"
            android:padding="8dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_action_favorite_white"/>
    </android.support.v7.widget.LinearLayoutCompat>

</LinearLayout>